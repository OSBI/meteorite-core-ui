/*! =========================================================================
   RESPONSIVE
   ========================================================================= */

@media (min-width 768px) and (max-width 991px)
  body
    overflow-x hidden

@media (max-width 767px)
  body
    overflow-x hidden

  .wrapper-page
    width 90%
    
  .content-page
    margin-left 0 !important
    
  .navbar-nav 
    .open 
      .dropdown-menu
        position absolute
        right 0
        left auto
        background $white
        box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26)
        
  .wrapper
    &.smaller
      .side-menu
        &.left
          margin-left -75px
    
@media (max-width 480px)
  .side-menu
    z-index 10 !important

  .button-menu-mobile
    display block
    
@media (max-width 419px)
  .topbar-left
    width 200px !important
    
  .content-page
    margin-left 70px
    
  .wrapper
    &.forced
      .side-menu
        &.left
          box-shadow 0 12px 12px rgba(0, 0, 0, 0.1)
    &.smaller
      .side-menu
        &.left
          box-shadow 0 1px 1px rgba(0, 0, 0, 0.1) !important
