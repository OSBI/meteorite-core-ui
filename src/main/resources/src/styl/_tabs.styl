/*! =========================================================================
   TABS
   ========================================================================= */

// Colors
$tab-bar-background = white
$tab-border-color = $lightdark-alt
$tab-selected-color = #eaeff2
$tab-unselected-color = white

// Sizes
$tab-margin-top = 60px
$tab-height = 40px

.nav-tabs
  background $tab-bar-background
  margin-top $tab-margin-top
  li
    a[role=tab]
      color black
      border 1px solid $tab-border-color
      line-height $tab-height
      background $tab-unselected-color
      &[aria-expanded="true"]
        background #eaeff2 
      .close
        padding: 10px 0 0 10px
