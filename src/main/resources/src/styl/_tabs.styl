/*! =========================================================================
   TABS
   ========================================================================= */

.tabs-navigation 
  max-height 30px
  // padding 0 20px
  border-bottom 1px solid #ddd

.tabs-menu 
  display table
  margin 0
  padding 0
  list-style none

.tabs-menu-item 
  float left

.tabs-menu-item a 
  display block
  height 30px
  padding 0 20px
  line-height 30px
  color #a9a9a9
  border-bottom 0
  cursor pointer

.tabs-menu-item:not(.is-active) a:hover 
  color #3498db

.tabs-menu-item.is-active a 
  color #333
  border 1px solid #ddd
  border-top 2px solid $lightdark3
  border-bottom 0
  background #fff

.tabs-panel 
  display none
  padding 30px

.tabs-panel.is-active 
  display block
