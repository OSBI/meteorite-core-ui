/*! =========================================================================
   MENUBAR
   ========================================================================= */
   
.topbar
  position fixed
  z-index 999
  top 0
  right 0
  left 0
  .topbar-left
    position relative
    z-index 1
    float left
    width 240px
    
.logo
  // TODO: Remove `line-height`
  line-height 60px
  
.navbar-default
  margin-bottom 0
  border none
  border-radius 0
  background $white
  // box-shadow 0 2px 3px -2px rgba(0, 0, 0, 0.15)
  .badge
    position absolute
    top 12px
    right 7px
   
.navbar-nav
  margin 0

.nav >
  li >
    a
      position relative
      padding 0 15px
      line-height 60px
      color $white
      i
        font-size 16px
        
.profile
  img
    width 36px
    height 36px
    border 2px solid #edf0f0

.button-menu-mobile
  padding 0 15px
  font-size 21px
  line-height 60px
  color $lightdark-alt
  border none
  background transparent
  &:hover
    color $white
  