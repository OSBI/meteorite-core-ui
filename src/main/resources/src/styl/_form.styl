/*! =========================================================================
   FORM
   ========================================================================= */

textarea
  &.form-control
    min-height 90px
    
.form-control
  max-width $width
  height 38px
  padding 7px 12px
  color #565656
  border 1px solid #e3e3e3
  border-radius 4px
  background $white
  box-shadow none
  transition all 300ms linear
  &:focus
    color $lightdark3
    border 1px solid #aaa
    outline 0 !important
    background $white
    box-shadow none
    
.form-horizontal
  .form-group
    margin-right -10px
    margin-left -10px
    
.input-lg
  height 46px
  padding 10px 16px
  font-size 18px
  line-height 1.3333333
  border-radius 6px
  
.input-sm
  height 30px
  padding 5px 10px
  font-size 12px
  line-height 1.5
  border-radius 3px
  
.input-group-btn
  .btn
    padding 8px 12px
  .btn-sm
    padding 5px 10px
  .btn-lg
    padding 10px 17px
