/*! =========================================================================
   FORM
   ========================================================================= */

textarea
  &.form-control
    min-height 90px
    
.form-control
  background $white
  border 1px solid #e3e3e3
  border-radius 4px
  color #565656
  padding 7px 12px
  height 38px
  max-width $width
  box-shadow none
  transition all 300ms linear
  &:focus
    background $white
    border 1px solid #aaa
    box-shadow none
    outline 0 !important
    color $lightdark3
    
.form-horizontal
  .form-group
    margin-left -10px
    margin-right -10px
