/*! =========================================================================
   TOOLBAR
   ========================================================================= */

.side-menu
  z-index 2
  top 0
  bottom 0
  width 240px
  &.left
    position absolute
    top 60px
    background white
    box-shadow 0 1px 1px rgba(0, 0, 0, 0.1)

.fixed-left
  .side-menu
    &.left
      position fixed
      bottom 50px
      height $height
      margin-top 0
      margin-bottom -70px
      padding-bottom 70px
      
.sidebar-inner
  height $height

// TODO: Refactor `.sidebar-menu`
.sidebar-menu
.sidebar-menu ul
.sidebar-menu li
.sidebar-menu a
  position relative
  margin 0
  padding 0
  font-weight normal
  line-height 1
  list-style none
  border 0
  text-decoration none
  
.sidebar-menu
  padding-top 30px
  padding-bottom 30px
  width $width
  
.sidebar-menu
  a
    line-height 1.3
    
.sidebar-menu
  > ul
    > li
      > a
        display block
        margin 4px 0
        padding 12px 20px
        color #36404a
        border-left 3px solid white
        &:hover
          color #5fbeaa
          text-decoration none
        > span
          vertical-align middle
          
.sidebar-menu
  ul
    li
      a
        i
          display inline-block
          width 20px
          margin-right 15px
          margin-left 3px
          font-size 16px
          line-height 17px
          text-align center
          vertical-align middle
          
